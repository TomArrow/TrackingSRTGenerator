<Window x:Class="TrackingSRTGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrackingSRTGenerator"
        mc:Ignorable="d"
        Title="Tracking SRT Generator" Height="170" Width="900">
    <StackPanel>
        <Button FontSize="50" x:Name="btnGenerate" Click="BtnGenerate_Click">Generate</Button>
        <WrapPanel HorizontalAlignment="Center" Margin="10">
            <Label VerticalAlignment="Center" ToolTip="Remember to include whitespace or shit will be stuck together">Prefix:</Label>
            <TextBox MinWidth="200" FontSize="30" x:Name="prefix_txt" TextAlignment="Center">Time: </TextBox>
            <Label VerticalAlignment="Center" Margin="10 0 0 0">Length in seconds:</Label>
            <TextBox MinWidth="200" FontSize="30" x:Name="length_txt" TextAlignment="Center">11000</TextBox>
            <Label VerticalAlignment="Center" Margin="10 0 0 0">Step in seconds:</Label>
            <TextBox MinWidth="100" FontSize="30" x:Name="step_txt" TextAlignment="Center">0.25</TextBox>
        </WrapPanel>
    </StackPanel>
</Window>
